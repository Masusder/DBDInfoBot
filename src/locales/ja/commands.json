{
  "info_command": {
    "name": "info",
    "description": "Retrieve detailed information about game features.",
    "options": {
      "type": {
        "name": "type",
        "description": "Specify the type of game feature you want information about.",
        "choices": {
          "perk": "Perk",
          "addon": "Add-on",
          "item": "Item",
          "offering": "Offering",
          "character": "Character",
          "cosmetic": "Cosmetic",
          "build": "Build",
          "collection": "Collection"
        }
      },
      "name": {
        "name": "name",
        "description": "Specify the name of the game feature you want information about."
      }
    }
  },
  "shrine_command": {
    "name": "shrine",
    "description": "Check weekly Shrine of Secrets."
  },
  "list_command": {
    "name": "list",
    "description": "Retrieve list of specified game feature items.",
